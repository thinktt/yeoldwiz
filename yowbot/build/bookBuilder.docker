FROM benjymous/docker-wine-headless

RUN apt update
RUN apt install time
RUN wine cmd /c echo Wine is setup || true

WORKDIR /opt
COPY assets/cm/books/ books/
COPY assets/node books/
COPY assets/tools/obk2bin.exe books/
COPY build/books2bin.sh books/
COPY build/normalizeBooks.js books/

WORKDIR /opt/books

CMD ["./books2bin.sh"]